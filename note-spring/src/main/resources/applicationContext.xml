<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 添加一个实例 -->
    <!-- id：获取Bean实例时传入的值；class：实现类的全名-->
    <bean id="myBean" class="start.MyBean"/>

    <!-- 通过静态工厂方法实例对象 -->
    <bean id="myBean2" class="start.MyBeanStaticFactory" factory-method="create"/>

    <!-- 通过实例工厂实例对象 -->
    <!-- 1.配置工厂的Bean -->
    <bean id="myBeanFactory" class="start.MyBeanFactory"/>
    <!-- 2. 配置一个Bean引用工厂 -->
    <bean id="myBean3" factory-bean="myBeanFactory" factory-method="create"/>


    <bean id="userDao" class="start.UserDaoImpl"/>

    <bean id="userService" class="start.UserServiceImpl">
        <!-- 将UserDao注入-->
        <property name="userDao" ref="userDao"/>
    </bean>

</beans>