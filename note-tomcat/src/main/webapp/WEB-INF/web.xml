<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Context -->
    <context-param>
        <param-name>devDir</param-name>
        <param-value>/target/classes</param-value>
    </context-param>
    <context-param>
        <param-name>prodDir</param-name>
        <param-value>/</param-value>
    </context-param>

    <!-- Listener -->
    <listener>
        <listener-class>com.randy.tomcat.lisenter.FileListener</listener-class>
    </listener>

    <!-- Servlet -->
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>com.randy.tomcat.UploadFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFile</servlet-name>
        <servlet-class>com.randy.tomcat.DownloadFile</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/UploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadFile</servlet-name>
        <url-pattern>/DownloadFile</url-pattern>
    </servlet-mapping>
</web-app>